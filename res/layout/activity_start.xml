<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6F1E7"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/textViewBienvenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue dans l'appliccation calculateur de cote R"
        android:textAlignment="center"
        android:textSize="120px"
        android:textStyle="bold"
        android:textColor="#777777"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376" />


    <Button
        android:id="@+id/buttonSenregistrer"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/button1"
        android:textAllCaps="false"
        android:textSize="70px"
        android:textColor="#FFFFFF"
        android:text="S'enregistrer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBienvenu"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSeConnecter"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button1"
        android:textAllCaps="false"
        android:textSize="70px"
        android:textColor="#FFFFFF"
        android:text="Se connecter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSenregistrer"
        app:layout_constraintVertical_bias="0.734" />
</androidx.constraintlayout.widget.ConstraintLayout>